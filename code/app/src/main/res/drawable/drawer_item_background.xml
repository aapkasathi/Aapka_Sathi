<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when an item is checked (selected) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/drawer_selected_item_background" />
            <corners android:radius="0dp" /> <!-- No rounded corners for the selection background itself -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <color android:color="@android:color/transparent" />
    </item>
</selector>